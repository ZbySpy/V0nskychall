        <% friends.forEach(function(friends){ %>
            <li><%=friends.name %> <%=friends.surname %></li>
        <% }) %>
        </ul>
        
        <h1>Posts</h1>
        <ul>
        <% post.forEach(function(post){ %>
            <li><%=post.value %><br>
                Posted by: <%=post.author%>
            </li>
            <br><br>
        <% }) %>
        </ul>
