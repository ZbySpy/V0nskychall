<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">


        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" id="bootstrap-css">


        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

        <link rel="stylesheet" href="/css/friends.css">

    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-inverse">
            <div class="navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-success">
                            <h4> Welcome: <i><%= user.records[0]._fields[0].properties.name %></i>
                            </h4>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/posts">
                            <h4>My Wall
                            </h4>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/user/invited">
                            <h4>Following
                            </h4>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link active" href="/user/friends">
                            <h4>Followers
                            </h4>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/user/users">
                            <h4>Users
                            </h4>
                        </a>
                    </li>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item active">
                            <a class="nav-link" href="/user/email">
                                <h4>Account
                                </h4>
                            </a>
                        </li>
                        <li>
                            <a href="/user/logout">
                                <span class="glyphicon glyphicon-log-in"></span>
                                Logout</a>
                        </li>
                    </ul>
                </ul>
            </div>
        </nav>
        <div class="container">
            <div class="text-success">You can change your email below</div>
            <br>
            <div class="row">
                <div class="col-md-8">
                    <form method="post" action="email">
                        <input type="email" required = "required" name = "newEmail" placeholder="Email..">
                        <button type="submit" class="btn btn-danger pull">Change</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
