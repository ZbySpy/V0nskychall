<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">


        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" id="bootstrap-css">


        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

        <link rel="stylesheet" href="/css/posts.css">

    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-inverse">
            <div class="navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/user/posts">
                            <h4>My Wall
                            </h4>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/user/friends">
                            <h4>My friends
                            </h4>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/user/users">
                            <h4>Users
                            </h4>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="/user/dashboard">
                            <h4>Dashboard
                            </h4>
                        </a>
                    </li>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="/user/logout">
                                <span class="glyphicon glyphicon-log-in"></span>
                                Logout</a>
                        </li>
                    </ul>
                </ul>
            </div>
        </nav>

        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <div class="h5">Hi
                            <i>@<%= user.records[0]._fields[0].properties.name %></i>!</div>

                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <div class="h6 text-muted">Followers</div>
                            <div class="h5">234</div>
                        </li>
                        <li class="list-group-item">
                            <div class="h6 text-muted">Following</div>
                            <div class="h5">65</div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6 gedf-main">
                <div class="card gedf-card">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active">Make a publication</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-panel" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                                <div class="form-group">
                                    <form method="POST" action="post">
                                        <textarea class="form-control" name="value" id="message" rows="3" placeholder="What are you thinking?" value="name"></textarea>
                                        <input type="hidden" name="author" value=" <%= user.records[0]._fields[0].properties.name.concat(' ').concat(user.records[0]._fields[0].properties.surname) %> ">
                                        <br>
                                        <button type="submit" class="btn btn-dark">Share</button>
                                    </form>
                                </div>

                            </div>

                        </div>

                    </div>
                </div>
                <% post.forEach(function(post){ %>
                    <div class="card gedf-card">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="mr-2">
                                        <img class="rounded-circle" width="45" src="https://picsum.photos/50/50" alt="">
                                    </div>

                                </div>
                                <div>
                                    <div class="dropdown">
                                        <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fa fa-ellipsis-h"></i>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1"></div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="card-body">
                            <div class="text-muted h7 mb-2">
                                <i class="fa fa-clock-o"></i>
                                <%=post.date%>
                            </div>

                            <a class="card-link">
                                <h5 class="card-title">
                                    <b>Posted by:</b>
                                    <%=post.name + " " + post.surname%></h5>
                            </a>

                            <p class="card-text">
                                <%=post.value %>
                            </p>
                            <div class="card-footer">
                                <div class="card-link">
                                    <i class="fa fa-gittip"></i>
                                    <form method="POST" action="like">
                                        <input type="hidden" name = "value" value="<%=post.value%>">
                                        <button type="submit" class="btn btn-danger pull-left">Like it!</button>
                                    </form>
                                    <br><br>
                                    Likes:</a>
                                    <%=post.likes%>
                                    
                                </div>

                            </div>
                        </div>


                    </div>
                <% }) %>
            </div>

        </body>
    </body>
</html></body></html>
